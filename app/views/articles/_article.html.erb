<div class="article d-sm-flex">
  <div class="article-img">
    <%= image_tag(article.image)if article.image.attached? %>
  </div>
  <div class="card"">
    <div class="card-body">
      <h5 class="card-title"><%= article.title %></h5>
      <small class="card-subtitle mb-2 text-muted font-italic">Posted <%= time_ago_in_words(article.created_at) %> ago</small>
      <p class="card-text"><%= article.text %></p>
      <p class="card-text author"><small class="text-muted">By <%= article.author.user_name %></small></p>
      
      <% if article.author == current_user %>
        <%= link_to 'Edit', edit_article_path(article), class: "btn-sm btn-primary" %>
        <%= link_to article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete the article?"} do %>  
          <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      <% end %>

      
      <%= display_vote_button(article) %>
    </div>
  </div>
</div>


