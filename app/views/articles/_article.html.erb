<picture>
  <%= image_tag article.image.url, class: "img-thumbnail" %>
</picture>
<div class="card mb-3 article" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.text %></p>
        <p class="card-text"><small class="text-muted">By <%= article.author.name %></small></p>
      </div>
    </div>
  </div>
</div>