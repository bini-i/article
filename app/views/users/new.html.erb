<h2>Sign Up</h2>
<%= form_with model: @user, local: true do |f| %>
    <% if @user.errors.any? %>
        <ul>
            <% @user.errors.full_messages.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    <% end %>
    
    <table>
        <tr>
            <td>
                <%= f.label :name %>
            </td>
            <td>
                <%= f.text_field :name %>
            </td>
        </tr>
        <tr>
            <td>
                <%= f.label :password %>
            </td>
            <td>
                <%= f.password_field :password %>
            </td>
        </tr>
        <tr>
            <td>
                <%= f.label :password_confirmation %>
            </td>
            <td>
                <%= f.password_field :password_confirmation %>
            </td>
        </tr>
    </table>

    <%= f.submit "Sign Up" %>
<% end %>
